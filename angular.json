{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "spotlight": {
      "projectType": "library",
      "root": "projects/spotlight",
      "sourceRoot": "projects/spotlight/src",
      "prefix": "ngx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/spotlight/tsconfig.lib.json",
            "project": "projects/spotlight/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/spotlight/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/spotlight/src/test.ts",
            "tsConfig": "projects/spotlight/tsconfig.spec.json",
            "karmaConfig": "projects/spotlight/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/spotlight/tsconfig.lib.json",
              "projects/spotlight/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "cli": {
    "analytics": "406f9a36-e4d2-4855-ba7b-e853e7a29762"
  },
  "defaultProject": "spotlight"
}
